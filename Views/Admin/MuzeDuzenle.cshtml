
@{
    ViewData["Title"] = "Müze Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<Muze>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Müzeler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Adı</th>
                            <th>Adresi</th>
                            <th>Ziyaretçi Sayısı(Yıllık)</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;}
                        @foreach (var muze in Model)
                        {

                        <tr>
                            <td><img src="@muze.Foto" width="50" height="50" /></td>
                            <td>@muze.MuzeAdi</td>
                            <td>@muze.MuzeAdresi</td>
                            <td>@muze.ZiyaretciSayisi</td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="MuzeSil" asp-route-id="@muze.MuzeId">Sil</a>
                                <a class="btn btn-info btn-sm" asp-controller="Admin" asp-action="MuzeUpdate" asp-route-id="@muze.MuzeId">Güncelle</a>
                            </td>
                        </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

