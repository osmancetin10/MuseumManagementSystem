
@{
    ViewData["Title"] = "Müze Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model Muze
    <div class="container mt-5">
        <h1 style="text-align:center;">Müze Ekle</h1>
        <form class="w-75 m-auto" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="MuzeAdi"></label>
                <input asp-for="MuzeAdi" class="form-control" />
                <span asp-validation-for="MuzeAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MuzeAdresi"></label>
                <input asp-for="MuzeAdresi" class="form-control" />
                <span asp-validation-for="MuzeAdresi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZiyaretciSayisi"></label>
                <input asp-for="ZiyaretciSayisi" class="form-control" />
                <span asp-validation-for="ZiyaretciSayisi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Fotoğraf Yükle</label>
                <input class="form-control" type="file" id="formFile" name="muzeFoto">
            </div>
            <button type="submit" class="btn btn-primary float-right">Kaydet</button>
        </form>
        
    </div>
    <div class="container mt-2">
        <p class="w-75 text-primary text-center">@ViewBag.Mesaj</p>
        <p class="w-75 text-danger text-center">@ViewBag.Error</p>
    </div>

