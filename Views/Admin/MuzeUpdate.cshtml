
@{
    ViewData["Title"] = "Müze Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model Muze
<div class="container mt-5">
    <h1 style="text-align:center;">Müze Düzenle</h1>
    <form class="w-75 m-auto" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="MuzeAdi"></label>
            <input asp-for="MuzeAdi" class="form-control" placeholder="@Model.MuzeAdi" />
            <span asp-validation-for="MuzeAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MuzeAdresi"></label>
            <input asp-for="MuzeAdresi" class="form-control" placeholder="@Model.MuzeAdresi" />
            <span asp-validation-for="MuzeAdresi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ZiyaretciSayisi"></label>
            <input asp-for="ZiyaretciSayisi" class="form-control" placeholder="@Model.ZiyaretciSayisi" />
            <span asp-validation-for="ZiyaretciSayisi" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label">Fotoğraf Yükle</label>
            <input class="form-control" type="file" id="formFile" name="hayvanFoto">
        </div>
        <button type="submit" class="btn btn-primary float-right" asp-route-id="@Model.MuzeId">Kaydet</button>
    </form>

</div>

